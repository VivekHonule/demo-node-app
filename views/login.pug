extends layout

block content
    form(action="/login/submit" method="POST" class="form-registration")
        label(for="email") Email:
        input(
            type="email"
            id="email"
            name="email"
            class="form-control"
        )

        label(for="password") Password:
        input(
            type="password"
            id="password"
            name="password"
            class="form-control"
        )

        input(type="submit" value="Submit" class="btn btn-lg btn-primary btn-block")


